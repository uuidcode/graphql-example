type Book {
    bookId: ID!
    title: String!
    isbn: String!
    pageCount: Int
    author: Author
}

extend type Query {
    findAllBooks: [Book]!
    countBooks: Long!
}

extend type Mutation {
    newBook(title: String!, isbn: String!, pageCount: Long) : Book!
    deleteBook(bookId: ID!) : Boolean
    updateBookPageCount(pageCount: Int!, bookId: ID!) : Book!
}